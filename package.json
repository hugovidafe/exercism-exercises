{
	"name": "@hugovidafe/exercism-exercises",
	"version": "0.0.0",
	"private": true,
	"description": "Storage of my exercism exercises",
	"homepage": "https://hugovidafe.dev",
	"bugs": {
		"url": "https://github.com/hugovidafe/exercism-exercises/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hugovidafe/exercism-exercises.git"
	},
	"author": {
		"name": "Hugovidafe",
		"email": "gh@hugovidafe.dev",
		"url": "https://hugovidafe.dev"
	},
	"workspaces": [
		"typescript/*"
	],
	"scripts": {
		"commit": "cz",
		"fmt": "turbo run lint --parallel -- --fix",
		"fmt:affected": "turbo run lint --filter='...[origin/main]' --parallel -- --fix",
		"format": "turbo run lint --parallel -- --fix",
		"format:affected": "turbo run lint --filter='...[origin/main]' --parallel -- --fix",
		"lint": "turbo run lint --parallel",
		"lint:affected": "turbo run lint --filter='...[origin/main]' --parallel",
		"test": "turbo run test --parallel",
		"test:affected": "turbo run test --filter='...[origin/main]' --parallel",
		"update": "yarn upgrade-interactive"
	},
	"devDependencies": {
		"commitizen": "^4.3.0",
		"cz-emoji": "^1.3.2-canary.2",
		"turbo": "^1.7.0"
	},
	"packageManager": "yarn@3.3.1",
	"engines": {
		"node": ">=16.9.0"
	}
}
